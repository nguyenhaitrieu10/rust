# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_CONNECT_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600
DATABASE_MAX_LIFETIME=3600
DATABASE_MIGRATE_ON_START=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECT_TIMEOUT=5
REDIS_RESPONSE_TIMEOUT=5
REDIS_CONNECTION_TIMEOUT=5
REDIS_DEFAULT_TTL=3600

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=rust-microservices
KAFKA_CLIENT_ID=rust-microservice
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_HEARTBEAT_INTERVAL_MS=3000
KAFKA_MAX_POLL_INTERVAL_MS=300000

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_KEEP_ALIVE=75
API_CLIENT_TIMEOUT=5000
API_CLIENT_SHUTDOWN=5000
API_MAX_CONNECTIONS=25000
API_MAX_CONNECTION_RATE=256

# Worker Service Configuration
WORKER_THREADS=4
WORKER_POLL_INTERVAL=5
WORKER_BATCH_SIZE=10
WORKER_JOB_TIMEOUT=300
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=60
WORKER_ENABLE_METRICS=true
WORKER_JOB_TYPES=*

# Event Service Configuration
EVENT_KAFKA_GROUP_ID=event-service
EVENT_KAFKA_TOPICS=events,user-events,order-events

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=104857600
LOG_MAX_FILES=10
LOG_JAEGER_ENDPOINT=
LOG_SERVICE_NAME=rust-microservice

# Metrics Configuration
METRICS_ENABLED=true
METRICS_HOST=0.0.0.0
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_NAMESPACE=app

# Security Configuration
JWT_SECRET=your-secret-key-change-in-production-must-be-at-least-32-characters-long
JWT_EXPIRATION=3600
JWT_ISSUER=rust-microservices
JWT_AUDIENCE=api-users
BCRYPT_COST=12
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Development Configuration
RUST_LOG=info
RUST_BACKTRACE=1

# Docker Configuration
COMPOSE_PROJECT_NAME=rust-microservices

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3000
JAEGER_URL=http://localhost:16686

# Test Configuration
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_KAFKA_BROKERS=localhost:9092